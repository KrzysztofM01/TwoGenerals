<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="loginPanel.PaneController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          stylesheets="cssFiles/loginPanel.css">

    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>


    <Label id="text" text="Login Name:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id="loginField"
               GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label id="text" text="Password:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <PasswordField fx:id="passwordField"
                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="1" GridPane.rowIndex="4">

        <Button text="Register"
                onAction="#handleRegisterButtonAction"/>

        <Button text="Sign In"
                onAction="#handleLoginButtonAction"/>
    </HBox>

    <Text id="loginStatus" fx:id="systemResponse"
          GridPane.columnIndex="1" GridPane.rowIndex="6"
          GridPane.rowSpan="2"

          wrappingWidth="175"
    />
</GridPane>